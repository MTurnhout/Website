# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,csproj,sln}]
charset = utf-8-bom
indent_size = 4

[*.md]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false
